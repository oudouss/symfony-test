<div class="section pt-5 pb-0">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-lg-7 text-center">
                <h2 class="heading">Trending</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="posts-slide-wrap">
                    <div class="posts-slide" id="posts-slide">
                    {% for trendingArticle in trendingArticles %}
                        <div class="item">
                            <div class="post-entry d-lg-flex">
                                <div class="me-lg-5 thumbnail mb-4 mb-lg-0">
                                    <a href="{{ url('app_article', {'slug': trendingArticle.slug}) }}">
                                        <img src="{{ trendingArticle.cover }}" alt="{{ trendingArticle.titre }}" class="img-fluid">
                                    </a>
                                </div>
                                <div class="content align-self-center">
                                    <div class="post-meta mb-3">
                                        <a href="{{ url('app_category', {'slug': trendingArticle.category.slug}) }}" class="category">{{ trendingArticle.category.titre }}</a>
                                        &mdash;
                                        <span class="date">{{ trendingArticle.createdAt | date('M, d Y')}}</span>
                                    </div>
                                    <h2 class="heading"><a href="{{ url('app_article', {'slug': trendingArticle.slug}) }}">{{ trendingArticle.titre }}</a></h2>
                                    <p>{{ trendingArticle.intro | slice(0, 100)~'...' }}</p>
                                    <a href="#" class="post-author d-flex align-items-center">
                                        <div class="author-pic">
                                            <img src="{{ trendingArticle.publisher.avatar }}" alt="Image">
                                        </div>
                                        <div class="text">
                                            <strong>{{ trendingArticle.publisher.fullName }}</strong>
                                            <span>{{ trendingArticle.publisher.titre }}</span>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
